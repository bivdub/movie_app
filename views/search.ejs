<% include header %>
<div class="container text-center">
	<h1> Search Results </h1>
	<% for(var i=0; i<stuff.Search.length; i++) { %>
	<div class="row text-center">
	<form action="/browse" method="post">
		<a href="/movies/<%= stuff.Search[i].imdbID %>"><%= stuff.Search[i].Title %> </a>
		<input value="<%=stuff.Search[i].imdbID %>" type="hidden" name="imdbCode">
		<button type="submit" class="btn btn-primary"><span class="glyphicon glyphicon-plus"></span></button>
	</form> 
	</div>
		<% } %>
</div>
<% include footer %>